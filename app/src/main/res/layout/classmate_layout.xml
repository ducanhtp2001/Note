<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgclass"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="#00EDE9E9"/>

        <TextView
            android:id="@+id/classNameValues"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Tên Lớp"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/teacherLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Giáo Viên: "
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/teacherValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20dp"
            android:text="n"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalCreditLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Số tín: "
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/totalCreditValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20dp"
            android:text="n"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_listName"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Danh sách lớp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp">

        <ImageButton
            android:id="@+id/btnStdList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00F6F5F5"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:src="@drawable/person"
            android:alpha="0.5"/>

        <ImageButton
            android:id="@+id/btnChatList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00F6F5F5"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:src="@drawable/chat"
            android:alpha="0.5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Ho Tên"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Mã sinh viên"/>

    </LinearLayout>

    <ListView
        android:id="@+id/studentListView"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginHorizontal="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/btnClearMsg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_bin"
            android:scaleType="fitCenter"
            android:background="#00ECE7E7"
            android:layout_marginLeft="250dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp">

        <EditText
            android:id="@+id/chatBox"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="Your message"/>

        <ImageButton
            android:id="@+id/btnAddImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:background="#00E3E3E4"
            android:src="@drawable/ic_img"
            android:alpha="0.5"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/btnSendMsg"
            android:layout_width="22dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.8"
            android:background="#00E3E3E4"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_send" />



    </LinearLayout>

</LinearLayout>